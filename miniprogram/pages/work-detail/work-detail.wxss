/* ========== 🎨 AI生成动画 ========== */
.ai-generating-animation {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  backdrop-filter: blur(10rpx);
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.animation-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 60rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-radius: 32rpx;
  box-shadow: 0 20rpx 80rpx rgba(0, 0, 0, 0.3);
  min-width: 500rpx;
  position: relative;
  overflow: hidden;
}

/* 旋转的相机图标 */
.camera-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(70, 92, 136, 0.2));
}

.rotating {
  animation: rotate360 2s linear infinite;
}

@keyframes rotate360 {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 加载标题 */
.loading-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 40rpx;
  letter-spacing: 2rpx;
}

/* 进度条容器 */
.progress-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
  position: relative;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #465C88 0%, #FFB84D 50%, #FF7A30 100%);
  border-radius: 6rpx;
  animation: progressFill 30s linear forwards;
  box-shadow: 0 0 20rpx rgba(70, 92, 136, 0.4);
}

@keyframes progressFill {
  from {
    width: 0%;
  }
  to {
    width: 100%;
  }
}

.progress-text {
  font-size: 24rpx;
  color: #6c757d;
  font-weight: 500;
}

/* 加载提示 */
.loading-tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #f0f7ff 0%, #e8f4ff 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid #465C88;
  min-height: 80rpx;
}

.tip-icon {
  font-size: 32rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #5a6c84;
  line-height: 1.6;
  animation: fadeInText 0.5s ease-out;
}

@keyframes fadeInText {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 装饰点 */
.decoration-dots {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  overflow: hidden;
}

.dot {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FFB84D, #FF7A30);
  opacity: 0.3;
}

.dot-1 {
  top: 10%;
  left: 10%;
  animation: float1 4s ease-in-out infinite;
}

.dot-2 {
  top: 20%;
  right: 15%;
  animation: float2 5s ease-in-out infinite;
}

.dot-3 {
  bottom: 15%;
  left: 20%;
  animation: float3 6s ease-in-out infinite;
}

@keyframes float1 {
  0%, 100% {
    transform: translate(0, 0);
  }
  50% {
    transform: translate(20rpx, -20rpx);
  }
}

@keyframes float2 {
  0%, 100% {
    transform: translate(0, 0);
  }
  50% {
    transform: translate(-30rpx, 30rpx);
  }
}

@keyframes float3 {
  0%, 100% {
    transform: translate(0, 0);
  }
  50% {
    transform: translate(30rpx, 20rpx);
  }
}