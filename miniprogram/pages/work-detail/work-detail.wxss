/* 积分提示 */
.credit-info {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 28rpx 32rpx;
  margin-top: 32rpx;
  background: linear-gradient(135deg, #fff7ed 0%, #ffedd5 100%);
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #ea580c;
  font-weight: 600;
  border: 2rpx solid #fed7aa;
}

.credit-info .icon-coin {
  font-size: 36rpx;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 32rpx 40rpx 40rpx;
  border-top: 1rpx solid #e5e7eb;
  background: #fafbfc;
}

.modal-btn {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s;
  position: relative;
  overflow: hidden;
}

.modal-btn::after {
  border: none !important;
}

.modal-btn.cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.modal-btn.cancel:active {
  background: #e5e7eb;
  transform: scale(0.98);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: #ffffff;
  box-shadow: 0 8rpx 24rpx rgba(70, 92, 136, 0.3);
}

.modal-btn.confirm::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transition: left 0.6s;
}

.modal-btn.confirm:active::before {
  left: 100%;
}

.modal-btn.confirm:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(70, 92, 136, 0.4);
}

.modal-btn.confirm[disabled] {
  background: #e5e7eb;
  color: #9ca3af;
  box-shadow: none;
}

