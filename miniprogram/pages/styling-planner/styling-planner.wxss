/* 造型规划器样式 */

.planner-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff9f0 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

/* ========== 月份切换 ========== */
.month-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 40rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.month-nav {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.month-nav:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.nav-icon {
  font-size: 48rpx;
  color: #FF9A56;
  font-weight: 300;
}

.month-title {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.year {
  font-size: 28rpx;
  color: #999;
}

.month {
  font-size: 44rpx;
  font-weight: bold;
  color: #333;
}

/* ========== 星期标题 ========== */
.week-header {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.week-day {
  text-align: center;
  font-size: 24rpx;
  color: #999;
  font-weight: 500;
}

/* ========== 日历网格 ========== */
.calendar-scroll {
  height: calc(100vh - 200rpx);
  padding: 0 24rpx;
}

.calendar-grid {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 12rpx;
  padding: 24rpx 0;
}

.date-cell {
  position: relative;
  aspect-ratio: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 12rpx 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.date-cell:active {
  transform: scale(0.95);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.1);
}

.date-cell.other-month {
  opacity: 0.3;
}

.date-cell.today {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
}

.date-cell.today .date-number {
  color: #fff;
  font-weight: bold;
}

.date-cell.has-event {
  border: 2rpx solid #FF9A56;
}

.date-number {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
}

/* 事件标记点 */
.event-dots {
  display: flex;
  gap: 4rpx;
  margin-top: auto;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #FF9A56;
}

/* 造型缩略图 */
.outfit-preview {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  right: 8rpx;
  height: 40rpx;
  overflow: hidden;
  border-radius: 8rpx;
}

.outfit-thumb {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 天气图标 */
.weather-icon {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 20rpx;
}

/* ========== 事件列表 ========== */
.events-section {
  margin-top: 32rpx;
  padding: 0 0 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.event-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.event-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  gap: 20rpx;
  transition: all 0.3s;
}

.event-item:active {
  transform: scale(0.98);
}

.event-color {
  width: 8rpx;
  height: 60rpx;
  border-radius: 4rpx;
  background: #FF9A56;
}

.event-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.event-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.event-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #999;
}

.event-outfit {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.outfit-mini {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* ========== FAB按钮 ========== */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  z-index: 999;
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}

/* ========== 事件弹窗 ========== */
.event-modal, .outfit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  display: flex;
  align-items: flex-end;
}

.event-modal.show, .outfit-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.event-modal.show .modal-content,
.outfit-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.picker-value {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-input:focus {
  background: #fff;
  border-color: #FF9A56;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.form-textarea:focus {
  background: #fff;
  border-color: #FF9A56;
}

/* 类型按钮 */
.type-buttons {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.type-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-btn.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-color: transparent;
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.type-name {
  font-size: 24rpx;
  color: #666;
}

.type-btn.active .type-name {
  color: #fff;
  font-weight: 600;
}

/* 天气按钮 */
.weather-buttons {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.weather-btn {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 48rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.weather-btn.active {
  background: #fff9f0;
  border-color: #FF9A56;
}

/* 造型选择器 */
.outfit-selector {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selected-outfit {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.outfit-items {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.outfit-item-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #fff;
  object-fit: contain;
}

.change-text {
  font-size: 26rpx;
  color: #FF9A56;
}

.no-outfit {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  color: #999;
  font-size: 26rpx;
}

.add-icon {
  font-size: 48rpx;
  color: #ccc;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-cancel, .btn-save {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
}

.btn-save {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
}

.btn-cancel:active, .btn-save:active {
  transform: scale(0.98);
}

/* ========== 衣物选择弹窗 ========== */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  transition: all 0.3s;
  min-width: 100rpx;
}

.category-item.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #fff;
  font-weight: 600;
}

.items-scroll {
  flex: 1;
  padding: 24rpx;
}

.items-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.item-card {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  border: 3rpx solid transparent;
}

.item-card.selected {
  border-color: #FF9A56;
  box-shadow: 0 4rpx 16rpx rgba(255, 154, 86, 0.3);
}

.item-card:active {
  transform: scale(0.95);
}

.item-image {
  width: 100%;
  height: 160rpx;
  object-fit: contain;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.item-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF9A56;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
}

.empty-wardrobe {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #999;
}

.selected-count {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.btn-confirm {
  flex: 1;
  padding: 28rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-confirm:active {
  transform: scale(0.98);
}

/* ========== AI建议相关 ========== */
.form-label-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.ai-suggest-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-radius: 24rpx;
  transition: all 0.3s;
}

.ai-suggest-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}

.ai-icon {
  font-size: 28rpx;
}

.ai-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 600;
}

/* AI模态框 */
.ai-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  display: flex;
  align-items: flex-end;
}

.ai-modal.show {
  opacity: 1;
  visibility: visible;
}

.ai-modal .modal-content {
  max-height: 85vh;
}

/* AI加载状态 */
.ai-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.loading-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  animation: float 2s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 32rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top-color: #FF9A56;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

/* AI建议内容 */
.ai-style-tag {
  display: inline-block;
  padding: 12rpx 32rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 32rpx;
  margin-bottom: 24rpx;
}

.ai-advice {
  padding: 32rpx;
  background: #fff9f0;
  border-radius: 20rpx;
  margin-bottom: 32rpx;
  border-left: 6rpx solid #FF9A56;
}

.advice-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
}

/* AI推荐搭配 */
.ai-recommendations {
  margin-bottom: 32rpx;
}

.recommend-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.recommend-items {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.recommend-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.recommend-item:active {
  transform: scale(0.95);
}

.recommend-image {
  width: 100%;
  height: 160rpx;
  object-fit: contain;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.recommend-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 100%;
}

/* AI推荐理由 */
.ai-reasons {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 32rpx;
}

.reasons-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.reasons-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.reason-item {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
}

.reason-dot {
  color: #FF9A56;
  font-size: 32rpx;
  line-height: 1.6;
  font-weight: bold;
}

.reason-text {
  flex: 1;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* AI按钮 */
.btn-apply {
  flex: 1;
  padding: 28rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s;
}

.btn-apply:active {
  transform: scale(0.98);
  opacity: 0.9;
}
