/* 作品页面样式 */
@import "../../styles/global.wxss";

.container {
  background-color: #E9E3DF;
  min-height: 100vh;
}

/* 标签栏 */
.tabs-container {
  background: white;
  border-bottom: 1rpx solid #e9ecef;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tabs-scroll {
  width: 100%;
  white-space: nowrap;
}

.tabs {
  display: flex;
  padding: 0 20rpx;
}

.tab-item {
  flex-shrink: 0;
  padding: 30rpx 40rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: color 0.3s;
}

.tab-item.active {
  color: #465C88;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #465C88;
  border-radius: 2rpx;
}

/* 作品容器 */
.works-container {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  color: #dee2e6;
  margin-bottom: 30rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.empty-subtitle {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.create-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}

/* 作品网格 */
.works-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.work-item {
  background: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  transition: transform 0.2s;
}

.work-item:active {
  transform: scale(0.98);
}

/* 作品图片 */
.work-image {
  position: relative;
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}

.work-image image {
  width: 100%;
  height: 100%;
}

/* 懒加载相关样式 */
.lazy-image {
  transition: opacity 0.3s ease;
}

.lazy-image.loading {
  opacity: 0;
}

.lazy-image.loaded {
  opacity: 1;
}

.image-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: opacity 0.3s ease;
}

.placeholder-icon {
  font-size: 48rpx;
  color: #ccc;
  opacity: 0.6;
}

.work-type-tag {
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  padding: 8rpx 16rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  font-size: 20rpx;
  border-radius: 12rpx;
}

.favorite-btn {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255,255,255,0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
  transition: all 0.3s;
}

.favorite-btn.active {
  color: #ff4757;
  background: rgba(255,255,255,1);
}

/* 状态徽标：进行中/失败 */
.status-badge {
  position: absolute;
  top: 15rpx;
  right: 90rpx; /* 避开收藏按钮 */
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: #fff;
  line-height: 1;
}
.status-processing {
  background: rgba(70, 92, 136, 0.95);
}
.status-failed {
  background: rgba(220, 53, 69, 0.95);
}

/* 批量进度徽标：received/expected */
.batch-badge {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
  padding: 6rpx 10rpx;
  border-radius: 10rpx;
  font-size: 20rpx;
  color: #fff;
  background: rgba(0, 0, 0, 0.6);
}

/* 作品信息 */
.work-info {
  padding: 20rpx;
}

.work-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.work-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.work-time {
  font-size: 24rpx;
  color: #999;
}

.work-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
  transition: color 0.3s;
}

.action-btn:active {
  color: #465C88;
}

/* 加载状态 */
.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

.loading-icon {
  display: flex;
  gap: 8rpx;
  margin-right: 20rpx;
}

.loading-dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background: #465C88;
  animation: loading 1.4s infinite ease-in-out both;
}

.loading-dot:nth-child(1) { animation-delay: -0.32s; }
.loading-dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.no-more {
  text-align: center;
  padding: 40rpx;
  font-size: 28rpx;
  color: #999;
}

/* 筛选面板 */
.filter-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.filter-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  border-radius: 20rpx 20rpx 0 0;
  padding: 40rpx;
  max-height: 80vh;
  overflow-y: auto;
}

.filter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.filter-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #999;
}

.filter-section {
  margin-bottom: 40rpx;
}

.filter-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.filter-options {
  display: flex;
  gap: 20rpx;
}

.filter-option {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-option.active {
  background: #465C88;
  color: white;
}

.filter-actions {
  display: flex;
  gap: 20rpx;
}

.filter-reset, .filter-confirm {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
}

.filter-reset {
  background: #f8f9fa;
  color: #666;
}

.filter-confirm {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
}


/* 作品描述预览 */
.work-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  word-break: break-word;
}

/* 多任务容器 */
.progress-list {
  margin: 20rpx 20rpx 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 进行中进度卡片 */
.progress-card {
  background: #ffffff;
  margin: 20rpx;
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid #eef2f7;
}

.progress-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.progress-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.progress-eta {
  font-size: 24rpx;
  color: #6b7280;
}

.progress-sub {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-count, .progress-hint {
  font-size: 24rpx;
  color: #8892a0;
}

.progress-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.bar-bg {
  position: relative;
  flex: 1;
  height: 12rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  overflow: hidden;
}

.bar-fill {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  background: linear-gradient(90deg, #465C88 0%, #2F3E63 100%);
  border-radius: 999rpx;
  transition: width 0.4s ease;
}

.bar-percent {
  width: 90rpx;
  text-align: right;
  font-size: 24rpx;
  color: #465C88;
  font-weight: 600;
}

/* 小号卡片微缩样式（多任务列表项） */
.progress-card-sm {
  padding: 20rpx;
}

.progress-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 12rpx;
}

.mini-btn {
  border-color: #e2e8f0;
  color: #64748b;
}