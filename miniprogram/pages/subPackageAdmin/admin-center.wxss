/* 管理中心 - 现代化设计 2.0 */

/* ========== 全局变量 ========== */
page {
  --primary-color: #667EEA;
  --primary-gradient: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  --secondary-gradient: linear-gradient(135deg, #F093FB 0%, #F5576C 100%);
  --success-gradient: linear-gradient(135deg, #4FACFE 0%, #00F2FE 100%);
  --warning-gradient: linear-gradient(135deg, #FA709A 0%, #FEE140 100%);
  --danger-gradient: linear-gradient(135deg, #FD6585 0%, #FE2C55 100%);
  --glass-bg: rgba(255, 255, 255, 0.7);
  --glass-border: rgba(255, 255, 255, 0.18);
  --shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4px 16px rgba(0, 0, 0, 0.08);
  --shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.12);
  --shadow-xl: 0 12px 48px rgba(0, 0, 0, 0.16);
}

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  position: relative;
  padding-bottom: 40rpx;
}

/* ========== 头部区域 ========== */
.header {
  padding: 80rpx 40rpx 60rpx;
  text-align: center;
  position: relative;
  z-index: 1;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: 800;
  color: white;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 2rpx;
  animation: slideDown 0.6s ease;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
  letter-spacing: 1rpx;
  animation: slideDown 0.6s ease 0.1s both;
}

@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ========== 标签页导航 ========== */
.tab-bar {
  display: flex;
  background: white;
  padding: 12rpx;
  margin: 0 24rpx;
  border-radius: 24rpx;
  box-shadow: var(--shadow-xl);
  position: relative;
  z-index: 2;
  overflow-x: auto;
  white-space: nowrap;
  animation: slideUp 0.6s ease 0.2s both;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tab-item {
  flex: 1;
  min-width: 110rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  border-radius: 24rpx;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
  position: relative;
}

.tab-item::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 24rpx;
  background: var(--primary-gradient);
  opacity: 0;
  transition: opacity 0.4s ease;
}

.tab-item.active::before {
  opacity: 1;
}

.tab-item.active {
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.4);
  transform: translateY(-4rpx);
}

.tab-icon {
  display: block;
  font-size: 36rpx;
  margin-bottom: 6rpx;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.tab-item.active .tab-icon {
  transform: scale(1.15) rotate(5deg);
}

.tab-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
  transition: all 0.4s ease;
  position: relative;
  z-index: 1;
}

.tab-item.active .tab-text {
  color: white;
  font-weight: 700;
}

/* ========== 内容区域 ========== */
.tab-content {
  padding: 32rpx 24rpx;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* ========== 区块头部 ========== */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 28rpx;
  flex-wrap: wrap;
  gap: 16rpx;
}

.section-header-simple {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 800;
  color: white;
  text-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.2);
  letter-spacing: 1rpx;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  background: white;
  color: #667EEA;
  border: none;
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 700;
  box-shadow: var(--shadow-lg);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.add-btn::after {
  border: none;
}

.add-btn:active {
  transform: scale(0.96);
  box-shadow: var(--shadow-md);
}

.btn-icon {
  font-size: 28rpx;
  font-weight: bold;
}

/* ========== 列表项卡片 ========== */
.model-list, .prompt-list, .scene-list, .package-list, .user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.model-item, .prompt-item, .scene-item, .package-item, .user-item {
  background: white;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: var(--shadow-lg);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: visible;
}

.model-item::before, .prompt-item::before, .scene-item::before,
.package-item::before, .user-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: var(--primary-gradient);
  transform: scaleY(0);
  transform-origin: top;
  transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.model-item:active, .prompt-item:active, .scene-item:active,
.package-item:active, .user-item:active {
  transform: translateY(-4rpx);
  box-shadow: var(--shadow-xl);
}

.model-item:active::before, .prompt-item:active::before, .scene-item:active::before,
.package-item:active::before, .user-item:active::before {
  transform: scaleY(1);
}

/* ========== 卡片状态样式 ========== */
.model-item.active {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.15), rgba(34, 197, 94, 0.05));
}

.model-item.inactive {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15), rgba(239, 68, 68, 0.05));
  opacity: 0.8;
}

.model-info, .prompt-info, .scene-info, .package-info, .user-info {
  margin-bottom: 20rpx;
}

.user-info {
  margin-bottom: 0;
  overflow: hidden;
}

.model-header, .prompt-header, .scene-header, .package-header, .user-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  flex-wrap: wrap;
  gap: 12rpx;
  min-height: 40rpx;
}

.model-name, .prompt-name, .scene-name, .package-name, .user-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.model-status, .scene-status, .package-status, .user-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 700;
  white-space: nowrap;
  box-shadow: var(--shadow-sm);
  flex-shrink: 0;
}

.model-status.active, .scene-status.enabled, .package-status.active, .user-status.active {
  background: linear-gradient(135deg, #D1FAE5, #A7F3D0);
  color: #065F46;
}

.model-status.inactive, .scene-status.disabled, .package-status.inactive, .user-status.inactive {
  background: linear-gradient(135deg, #FEE2E2, #FECACA);
  color: #991B1B;
}

.model-desc, .prompt-desc, .scene-desc, .package-desc {
  font-size: 26rpx;
  color: #4a4a4a;
  line-height: 1.7;
  margin-bottom: 16rpx;
}

.model-meta, .scene-meta, .user-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-top: 8rpx;
}

.meta-item {
  font-size: 22rpx;
  color: #666;
  padding: 6rpx 12rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 12rpx;
  font-weight: 500;
  white-space: nowrap;
}

/* ========== 操作按钮 ========== */
.model-actions, .prompt-actions, .scene-actions, .package-actions, .user-actions {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.action-btn {
  flex: 1;
  min-width: 120rpx;
  height: 64rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
  white-space: nowrap;
}

/* 用户操作按钮特殊样式 */
.user-actions .action-btn {
  flex: none;
  width: 100%;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  background: var(--success-gradient);
  color: white;
}

.action-btn.toggle {
  background: var(--primary-gradient);
  color: white;
}

.action-btn.delete {
  background: var(--danger-gradient);
  color: white;
}

.action-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

/* ========== 提示词特殊样式 ========== */
.prompt-category {
  padding: 10rpx 20rpx;
  background: var(--warning-gradient);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 700;
  box-shadow: var(--shadow-sm);
}

.prompt-template, .prompt-variables {
  margin-top: 16rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.08);
  border-radius: 16rpx;
  border-left: 4rpx solid #667EEA;
}

.template-label, .variables-label {
  font-size: 22rpx;
  color: #667EEA;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.template-content, .variables-content {
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 1.7;
  word-break: break-all;
}

/* ========== 套餐特殊样式 ========== */
.package-popular {
  padding: 10rpx 20rpx;
  background: var(--warning-gradient);
  color: white;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 700;
  box-shadow: var(--shadow-sm);
}

.package-details {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
}

.detail-label {
  color: #666;
  font-weight: 500;
}

.detail-value {
  font-weight: 700;
  color: #1a1a1a;
}

.detail-value.original-price {
  text-decoration: line-through;
  color: #999;
  font-weight: 500;
}

.detail-value.discount {
  color: #F5576C;
  font-weight: 700;
}

/* ========== 用户管理特殊样式 ========== */
.filter-controls {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 28rpx;
  width: 100%;
}

.search-input {
  width: 100%;
  height: 72rpx;
  padding: 0 28rpx;
  background: white;
  border-radius: 36rpx;
  border: 2rpx solid #E5E7EB;
  font-size: 28rpx;
  box-shadow: var(--shadow-sm);
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.search-input:focus {
  border-color: #667EEA;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.08);
  outline: none;
}

.filter-buttons {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  width: 100%;
}

.filter-btn {
  width: 100%;
  height: 64rpx;
  padding: 0 16rpx;
  background: white;
  color: #666;
  border: none;
  border-radius: 20rpx;
  font-size: 26rpx;
  font-weight: 700;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

.filter-btn::after {
  border: none;
}

.filter-btn.active {
  background: var(--primary-gradient);
  color: white;
  box-shadow: var(--shadow-md);
  transform: scale(1.02);
}

.user-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  flex-wrap: wrap;
}

.user-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
  min-width: 0;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  border: 4rpx solid white;
  box-shadow: var(--shadow-md);
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  min-width: 0;
  margin-bottom: 0;
}

.user-id {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.user-actions {
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  min-width: 150rpx;
}

/* ========== 数据统计 ========== */
.export-controls {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.export-btn {
  padding: 16rpx 24rpx;
  background: white;
  color: #667EEA;
  border: none;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 700;
  box-shadow: var(--shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.export-btn::after {
  border: none;
}

.export-btn:active {
  transform: scale(0.95);
  box-shadow: var(--shadow-sm);
}

.statistics-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: white;
  border-radius: 24rpx;
  padding: 36rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: var(--shadow-lg);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.stat-card:active {
  transform: translateY(-4rpx) scale(1.02);
  box-shadow: var(--shadow-xl);
}

.stat-icon {
  font-size: 56rpx;
  line-height: 1;
}

.stat-content {
  flex: 1;
}

.stat-number {
  display: block;
  font-size: 44rpx;
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 4rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #666;
  font-weight: 600;
}

/* ========== 加载和空状态 ========== */
.loading, .empty-state {
  padding: 160rpx 0;
  text-align: center;
  color: white;
}

.empty-icon {
  display: block;
  font-size: 140rpx;
  margin-bottom: 28rpx;
  opacity: 0.6;
  animation: bounce 2s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.empty-text {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 600;
}

/* ========== 弹窗样式 ========== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(8rpx);
  -webkit-backdrop-filter: blur(8rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 92%;
  max-width: 660rpx;
  max-height: 85vh;
  background: white;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: var(--shadow-xl);
  animation: modalSlideUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100rpx) scale(0.9);
    opacity: 0;
  }
  to {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx;
  background: var(--primary-gradient);
  position: relative;
}

.modal-title {
  font-size: 34rpx;
  font-weight: 800;
  color: white;
  letter-spacing: 1rpx;
}

.modal-close {
  width: 52rpx;
  height: 52rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  cursor: pointer;
  border-radius: 50%;
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.2);
  transform: rotate(90deg);
}

.modal-body {
  padding: 36rpx;
  max-height: 65vh;
  overflow-y: auto;
}

.modal-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 36rpx;
  background: #F9FAFB;
  border-top: 1rpx solid #E5E7EB;
}

.btn-cancel, .btn-confirm {
  flex: 1;
  height: 88rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 700;
  border: none;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-md);
}

.btn-cancel::after, .btn-confirm::after {
  border: none;
}

.btn-cancel {
  background: white;
  color: #666;
}

.btn-cancel:active {
  background: #F3F4F6;
  transform: scale(0.97);
}

.btn-confirm {
  background: var(--primary-gradient);
  color: white;
}

.btn-confirm:active {
  transform: scale(0.97);
  box-shadow: var(--shadow-sm);
}

/* ========== 表单样式 ========== */
.form-section {
  margin-bottom: 40rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.form-section:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.form-section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #667EEA;
  margin-bottom: 28rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #667EEA;
  display: flex;
  align-items: center;
}

.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.char-count {
  float: right;
  font-size: 22rpx;
  color: #999;
  font-weight: 500;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.form-input {
  height: 72rpx;
}

.form-input:focus, .form-textarea:focus {
  background: white;
  border-color: #667EEA;
  box-shadow: 0 0 0 3rpx rgba(102, 126, 234, 0.08);
  outline: none;
}

.form-textarea {
  min-height: 140rpx;
  max-height: 320rpx;
  line-height: 1.6;
}

.form-textarea.extra-large {
  min-height: 220rpx;
  max-height: 440rpx;
}

.form-textarea-url {
  min-height: 120rpx;
  max-height: 240rpx;
  font-size: 24rpx;
  line-height: 1.5;
  word-break: break-all;
}

.form-tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 16rpx;
  padding: 16rpx 20rpx;
  background: rgba(79, 172, 254, 0.1);
  border-radius: 16rpx;
  border-left: 4rpx solid #4FACFE;
}

.tips-icon {
  font-size: 28rpx;
}

.tips-text {
  flex: 1;
  font-size: 24rpx;
  color: #4a4a4a;
  line-height: 1.6;
}

.picker-display {
  height: 72rpx;
  padding: 0 24rpx;
  background: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1a1a1a;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.picker-display::after {
  content: '▼';
  font-size: 20rpx;
  color: #999;
  margin-left: 12rpx;
}

.show-password {
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 36rpx;
  cursor: pointer;
  transition: transform 0.3s ease;
}

.show-password:active {
  transform: translateY(-50%) scale(1.2);
}

.form-group {
  position: relative;
}

slider {
  width: 100%;
}

/* ========== 双列表单布局 ========== */
.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.form-group.half {
  flex: 1;
  margin-bottom: 0;
}

/* ========== 开关行 ========== */
.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
}

.switch-label {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 700;
}

/* ========== 积分调整弹窗样式 ========== */
.user-credits-info {
  background: linear-gradient(135deg, #FFF5E6 0%, #FFEED9 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(255, 165, 0, 0.2);
  box-shadow: var(--shadow-sm);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  font-weight: 600;
}

.info-value {
  font-size: 28rpx;
  color: #1a1a1a;
  font-weight: 700;
}

.info-value.highlight {
  font-size: 40rpx;
  color: #F5576C;
  font-weight: 800;
}

.adjust-type-buttons {
  display: flex;
  gap: 12rpx;
  margin-top: 16rpx;
}

.type-btn {
  flex: 1;
  padding: 24rpx 20rpx;
  background: white;
  color: #666;
  border: 2rpx solid #E5E7EB;
  border-radius: 20rpx;
  font-size: 28rpx;
  font-weight: 700;
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: var(--shadow-sm);
}

.type-btn::after {
  border: none;
}

.type-btn.active {
  background: var(--primary-gradient);
  color: white;
  border-color: transparent;
  box-shadow: var(--shadow-md);
  transform: scale(1.05);
}

.type-btn:active {
  transform: scale(0.97);
}

.preview-result {
  margin-top: 28rpx;
  padding: 24rpx 28rpx;
  background: linear-gradient(135deg, #E8F5E9 0%, #F1F8F2 100%);
  border-radius: 20rpx;
  border: 2rpx solid rgba(34, 197, 94, 0.3);
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: var(--shadow-sm);
}

.preview-label {
  font-size: 28rpx;
  color: #4a4a4a;
  font-weight: 700;
}

.preview-value {
  font-size: 40rpx;
  color: #22C55E;
  font-weight: 800;
}

.preview-value.error {
  color: #EF4444;
  background: linear-gradient(135deg, #FEE2E2 0%, #FEF2F2 100%);
  border-radius: 16rpx;
  padding: 6rpx 20rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.3);
}

/* ========== 响应式设计 ========== */
@media (max-width: 375px) {
  .statistics-grid {
    grid-template-columns: 1fr;
  }

  .tab-bar {
    padding: 8rpx;
  }

  .tab-item {
    padding: 16rpx 12rpx;
  }

  .tab-icon {
    font-size: 32rpx;
  }

  .tab-text {
    font-size: 22rpx;
  }

  .section-title {
    font-size: 36rpx;
  }

  .search-input {
    font-size: 26rpx;
  }

  .filter-btn {
    font-size: 24rpx;
    padding: 0 8rpx;
    height: 56rpx;
  }

  .user-content {
    flex: 1 1 100%;
  }

  .user-avatar {
    width: 80rpx;
    height: 80rpx;
  }

  .user-actions {
    width: 100%;
    flex-direction: row;
  }

  .user-actions .action-btn {
    flex: 1;
  }

  .user-name {
    font-size: 28rpx;
  }
}
