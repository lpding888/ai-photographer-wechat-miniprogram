/* 场景数据调试页面样式 */
.debug-container {
  padding: 32rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.debug-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.debug-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 按钮组 */
.button-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.debug-btn {
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.debug-btn.primary {
  background-color: #007AFF;
  color: white;
}

.debug-btn.success {
  background-color: #34C759;
  color: white;
}

.debug-btn.warning {
  background-color: #FF9500;
  color: white;
}

.debug-btn.info {
  background-color: #5856D6;
  color: white;
}

.debug-btn[disabled] {
  opacity: 0.6;
}

/* 数据摘要 */
.data-summary {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.1);
}

.summary-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-item .label {
  font-size: 28rpx;
  color: #666;
}

.summary-item .value {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.summary-item .value.success {
  color: #34C759;
}

.summary-item .value.error {
  color: #FF3B30;
}

/* 日志控制 */
.log-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.log-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.log-buttons {
  display: flex;
  gap: 16rpx;
}

.log-btn {
  background-color: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 日志容器 */
.log-container {
  background-color: #1a1a1a;
  border-radius: 12rpx;
  padding: 24rpx;
  max-height: 600rpx;
  overflow-y: scroll;
}

.log-item {
  font-size: 24rpx;
  line-height: 1.4;
  color: #00ff00;
  font-family: 'Courier New', monospace;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.log-item.empty {
  color: #666;
  font-style: italic;
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-content {
  background-color: white;
  border-radius: 16rpx;
  padding: 48rpx;
  text-align: center;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
}