/* 造型回忆样式 */

.memories-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff9f0 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

/* ========== 筛选栏 ========== */
.filter-bar {
  background: #fff;
  padding: 20rpx 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.filter-item {
  display: inline-flex;
  padding: 16rpx 32rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  font-size: 26rpx;
  color: #666;
  transition: all 0.3s;
}

.filter-item.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  font-weight: 600;
}

/* ========== 时间轴 ========== */
.timeline-scroll {
  height: calc(100vh - 140rpx);
}

.timeline-container {
  padding: 32rpx 24rpx;
}

.memory-item {
  position: relative;
  padding-left: 80rpx;
  margin-bottom: 48rpx;
}

.timeline-line {
  position: absolute;
  left: 31rpx;
  top: 48rpx;
  bottom: -48rpx;
  width: 2rpx;
  background: #e0e0e0;
}

.memory-item:last-child .timeline-line {
  display: none;
}

.timeline-dot {
  position: absolute;
  left: 20rpx;
  top: 32rpx;
  width: 24rpx;
  height: 24rpx;
  background: #FF9A56;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 0 0 2rpx #FF9A56;
  z-index: 1;
}

/* ========== 回忆卡片 ========== */
.memory-card {
  position: relative;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.memory-item:active .memory-card {
  transform: scale(0.98);
}

.memory-date {
  position: absolute;
  left: -60rpx;
  top: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  z-index: 2;
}

.date-day {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF9A56;
}

.date-month {
  font-size: 22rpx;
  color: #999;
}

/* 图片展示 */
.memory-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
  max-height: 600rpx;
  overflow: hidden;
}

.memory-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.memory-image.single {
  grid-column: span 3;
  height: 400rpx;
}

/* 内容区 */
.memory-content {
  padding: 24rpx;
}

.memory-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.memory-note {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.memory-mood {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 20rpx;
  background: #fff9f0;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  width: fit-content;
}

.mood-icon {
  font-size: 32rpx;
}

.mood-text {
  font-size: 26rpx;
  color: #FF9A56;
}

.memory-outfit {
  margin-bottom: 16rpx;
}

.outfit-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.outfit-items {
  display: flex;
  gap: 12rpx;
}

.outfit-item {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #f8f9fa;
  object-fit: contain;
}

.memory-meta {
  display: flex;
  gap: 24rpx;
  font-size: 24rpx;
  color: #999;
  padding-top: 12rpx;
  border-top: 1rpx solid #f0f0f0;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 160rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
}

/* ========== FAB按钮 ========== */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  z-index: 999;
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.9);
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
}

/* ========== 添加弹窗 ========== */
.add-modal, .outfit-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
  display: flex;
  align-items: flex-end;
}

.add-modal.show, .outfit-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 100%;
  max-height: 85vh;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  display: flex;
  flex-direction: column;
  transform: translateY(100%);
  transition: transform 0.3s;
}

.add-modal.show .modal-content,
.outfit-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.picker-value {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid transparent;
}

.form-input:focus {
  background: #fff;
  border-color: #FF9A56;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.form-textarea:focus {
  background: #fff;
  border-color: #FF9A56;
}

/* 图片上传 */
.image-uploader {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.uploaded-images {
  display: contents;
}

.uploaded-item {
  position: relative;
  aspect-ratio: 1;
}

.uploaded-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 48rpx;
  height: 48rpx;
  background: #FF6B35;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 36rpx;
  font-weight: 300;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.4);
}

.upload-btn {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx dashed #ddd;
  transition: all 0.3s;
}

.upload-btn:active {
  background: #e9ecef;
}

.upload-icon {
  font-size: 48rpx;
  color: #ccc;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 22rpx;
  color: #999;
}

/* 心情按钮 */
.mood-buttons {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.mood-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.mood-btn.active {
  background: #fff9f0;
  border-color: #FF9A56;
}

.mood-emoji {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.mood-label {
  font-size: 22rpx;
  color: #666;
}

/* 穿搭选择器 */
.outfit-selector {
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selected-outfit {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.outfit-previews {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.outfit-preview {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  background: #fff;
  object-fit: contain;
}

.change-text {
  font-size: 26rpx;
  color: #FF9A56;
}

.no-outfit {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  color: #999;
  font-size: 26rpx;
}

.add-icon {
  font-size: 48rpx;
  color: #ccc;
}

.modal-footer {
  display: flex;
  gap: 20rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-cancel, .btn-save {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}

.btn-cancel {
  background: #f8f9fa;
  color: #666;
}

.btn-save {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
}

/* 衣物选择弹窗样式（复用造型规划器的样式） */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.category-list {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  min-width: 100rpx;
}

.category-item.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
}

.category-item.active .category-name {
  color: #fff;
  font-weight: 600;
}

.items-scroll {
  flex: 1;
  padding: 24rpx;
}

.items-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.item-card {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 3rpx solid transparent;
}

.item-card.selected {
  border-color: #FF9A56;
}

.item-image {
  width: 100%;
  height: 160rpx;
  object-fit: contain;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
}

.item-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 40rpx;
  height: 40rpx;
  background: #FF9A56;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 24rpx;
}

.selected-count {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.btn-confirm {
  flex: 1;
  padding: 28rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
}
