/* AI摄影师首页 - 现代化样式 */
@import "../../styles/global.wxss";

.page-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  position: relative;
  overflow: hidden;
}

/* 状态栏占位 */
.status-bar {
  height: 44px;
}

/* 头部区域 */
.header-section {
  padding: 40rpx 40rpx 20rpx;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.user-area {
  display: flex;
  align-items: center;
  flex: 1;
}

.login-area {
  display: flex;
  align-items: center;
  flex: 1;
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    box-shadow: 0 4rpx 20rpx rgba(255, 122, 48, 0.3);
  }
  50% {
    box-shadow: 0 6rpx 30rpx rgba(255, 122, 48, 0.5);
  }
}

.avatar-wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  overflow: hidden;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
}

.user-avatar {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.avatar-icon {
  font-size: 40rpx;
  color: rgba(255, 255, 255, 0.8);
}

.user-info, .login-prompt {
  flex: 1;
}

.welcome-text {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.login-text {
  display: block;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.login-hint {
  display: block;
  color: rgba(255, 255, 255, 0.8);
  font-size: 22rpx;
}

.user-name {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}

.login-arrow {
  font-size: 40rpx;
  color: white;
  margin-left: 16rpx;
  animation: bounce 1s ease-in-out infinite;
}

/* Loading状态样式 */
.login-area.loading {
  opacity: 0.8;
  pointer-events: none;
  animation: none;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(8rpx);
  }
}

.credits-display {
  margin-left: 20rpx;
}

.credits-card {
  background: rgba(255, 255, 255, 0.15);
  backdrop-filter: blur(10px);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
}

.credits-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.credits-number {
  display: block;
  color: white;
  font-size: 28rpx;
  font-weight: 700;
  margin-bottom: 4rpx;
}

.credits-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 20rpx;
}

/* 主标题区域 */
.title-section {
  text-align: center;
  padding: 60rpx 40rpx 80rpx;
}

.main-title {
  display: block;
  color: white;
  font-size: 56rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
}

.sub-title {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  font-weight: 400;
}

/* 主要功能卡片 */
.main-features {
  padding: 0 40rpx;
  margin-bottom: 60rpx;
}

.feature-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20px);
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, transparent 0%, rgba(255, 255, 255, 0.1) 100%);
  pointer-events: none;
}

.primary-card {
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
}

.primary-card .card-title,
.primary-card .card-desc,
.primary-card .card-arrow {
  color: white;
}

.secondary-card {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
}

.secondary-card .card-title,
.secondary-card .card-desc,
.secondary-card .card-arrow {
  color: white;
}

.tertiary-card {
  background: linear-gradient(135deg, #6B7DA8 0%, #465C88 100%);
  color: white;
}

.tertiary-card .card-title,
.tertiary-card .card-desc,
.tertiary-card .card-arrow {
  color: white;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
}

.icon-text {
  font-size: 40rpx;
}

.card-content {
  flex: 1;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #000000;
}

.card-desc {
  font-size: 24rpx;
  color: #2f2f2f;
  line-height: 1.4;
}

.card-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: 300;
}

/* 次要登录入口 */
.secondary-login {
  padding: 0 40rpx 40rpx;
}

.secondary-login-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.secondary-login-btn::after {
  border: none;
}

.login-icon {
  margin-right: 12rpx;
  font-size: 24rpx;
}

/* 游客体验提示 */
.guest-experience {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.experience-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.experience-text text {
  color: rgba(255, 255, 255, 0.9);
  font-size: 28rpx;
  text-align: center;
}

.experience-hint {
  font-size: 24rpx !important;
  color: rgba(255, 255, 255, 0.7) !important;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 200rpx;
  pointer-events: none;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  bottom: -60rpx;
  left: 40rpx;
  animation: float 6s ease-in-out infinite;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  bottom: 40rpx;
  right: 100rpx;
  animation: float 4s ease-in-out infinite reverse;
}

.circle-3 {
  width: 60rpx;
  height: 60rpx;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  animation: float 5s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-title {
    font-size: 48rpx;
  }
  
  .feature-card {
    padding: 32rpx;
  }
  
  .card-title {
    font-size: 28rpx;
  }
}

/* 测试按钮样式 */
.test-section {
  padding: 0 40rpx;
  margin-top: 40rpx;
}

.test-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b, #ee5a24);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.3);
  border: none;
  gap: 16rpx;
}

.test-icon {
  font-size: 36rpx;
}

.test-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
}