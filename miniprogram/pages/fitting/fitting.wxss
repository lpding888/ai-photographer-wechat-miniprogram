/* 试衣间页面样式 */
@import "../../styles/global.wxss";

.container {
  padding: 20rpx;
  background-color: #E9E3DF;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.page-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

.section {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.required {
  color: #ff4757;
  margin-left: 5rpx;
}

.toggle-icon {
  margin-left: auto;
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

/* 单张图片上传 */
.single-image-upload {
  display: flex;
  justify-content: center;
}

.upload-placeholder {
  width: 300rpx;
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 28rpx;
}

.upload-placeholder .iconfont {
  font-size: 64rpx;
  margin-bottom: 20rpx;
}

/* 服装网格 */
.clothing-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30rpx;
}

.clothing-item {
  text-align: center;
}

.clothing-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.image-item {
  position: relative;
  width: 100%;
  height: 240rpx;
  border-radius: 16rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  width: 40rpx;
  height: 40rpx;
  background: rgba(0,0,0,0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

.upload-btn {
  width: 100%;
  height: 240rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.upload-btn .iconfont {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

/* 表单组件 */
.form-group {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group-vertical {
  flex-direction: column;
  align-items: flex-start;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
  margin-bottom: 24rpx;
}

.form-group-vertical:hover {
  border-color: #465C88;
  box-shadow: 0 4rpx 16rpx rgba(70,92,136,0.10);
}

.textarea-input {
  width: 100%;
  min-height: 160rpx;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.textarea-input:focus {
  border-color: #465C88;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(70,92,136,0.1);
}

.form-group-vertical .tip {
  width: 100%;
  font-size: 22rpx;
  color: #7f8c8d;
  margin-top: 4rpx;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #2c3e50;
  flex-shrink: 0;
  font-weight: 500;
}

textarea {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  min-height: 120rpx;
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

textarea:focus {
  border-color: #465C88;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(70,92,136,0.1);
}

/* 高级选项 */
.advanced-options {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s;
}

.advanced-options.show {
  max-height: 2000rpx;
}

/* 场景选择 */
.scene-scroll {
  width: 100%;
  white-space: nowrap;
}

.scene-list {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.scene-item {
  flex-shrink: 0;
  /* 放大场景卡片宽度，提升可视性 */
  width: 300rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.scene-item image {
  /* 放大缩略图尺寸 */
  width: 300rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.scene-item.selected image {
  border: 4rpx solid #465C88;
  box-shadow: 0 8rpx 24rpx rgba(70,92,136,0.30);
  transform: scale(1.05);
}

.scene-name {
  /* 适配大图后的标题可读性 */
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 600;
}

.scene-item.selected .scene-name {
  color: #465C88;
  font-weight: bold;
}

/* 两列瀑布流（网格）场景卡片 */
.scene-grid{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}
.scene-card{
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #ecf0f1;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  transition: all .2s ease;
}
.scene-card image{
  width: 100%;
  height: 240rpx;
  display: block;
}
.scene-card .scene-name{
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #7f8c8d;
}
.scene-card.selected{
  border-color: #465C88;
  box-shadow: 0 8rpx 24rpx rgba(70,92,136,0.20);
  transform: translateY(-2rpx);
}
.scene-card.selected .scene-name{
  color: #465C88;
  font-weight: 600;
}

/* 数量选择 */
.count-selector {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.count-label {
  font-size: 28rpx;
  color: #465C88;
  font-weight: bold;
  min-width: 80rpx;
}
.cost-summary {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #333;
}
.cost-summary.insufficient {
  color: #E5533D;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.reset-btn {
  flex: 1;
  height: 88rpx;
  background: #f8f9fa;
  color: #666;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
  border: none;
}

.preset-btn {
  flex: 1;
  height: 88rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(70,92,136,0.3);
  transition: all 0.3s ease;
}

.preset-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.generate-btn {
  flex: 2;
  height: 88rpx;
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0;
  border: none;
}

.generate-btn.loading {
  background: #ccc;
}

.generate-btn:disabled {
  background: #ccc;
}

/* 使用指南弹窗样式 */
.guide-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.guide-content {
  position: relative;
  width: 92%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.guide-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.guide-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.guide-body {
  flex: 1;
  padding: 32rpx 28rpx;
  overflow-y: auto;
}

.guide-intro {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
}

.intro-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.guide-step {
  display: flex;
  gap: 20rpx;
  margin-bottom: 36rpx;
}

.step-number {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
  display: block;
  margin-bottom: 12rpx;
}

.step-tips {
  margin-top: 12rpx;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #465C88;
}

.tip-label {
  display: block;
  font-size: 24rpx;
  color: #465C88;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 4rpx;
}

.guide-tips {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #fff8e1;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  border: 2rpx solid #ffd54f;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  display: block;
  margin-bottom: 2rpx;
}

.guide-footer {
  padding: 24rpx 32rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 16rpx;
}

.guide-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.guide-btn.secondary {
  background: #f0f0f0;
  color: #666;
}

.guide-btn.primary {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: #fff;
}

/* 预设管理弹窗样式 */
.preset-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preset-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.preset-content {
  position: relative;
  width: 92%;
  max-width: 680rpx;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

.preset-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.preset-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.preset-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.preset-body {
  flex: 1;
  padding: 24rpx 32rpx;
  overflow-y: auto;
}

/* 保存预设区域 */
.save-preset-section {
  margin-bottom: 32rpx;
  padding-bottom: 32rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.save-preset-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.save-preset-input-group {
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.preset-name-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
}

.save-preset-btn {
  flex-shrink: 0;
  width: 120rpx;
  height: 72rpx;
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  border-radius: 12rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
}

.save-preset-btn:active {
  opacity: 0.8;
}

/* 预设列表区域 */
.preset-list-section {
  flex: 1;
}

.preset-list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.preset-list {
  max-height: 400rpx;
}

.preset-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.preset-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-right: 16rpx;
}

.preset-item-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.preset-item-scene {
  font-size: 24rpx;
  color: #999;
}

.preset-item-actions {
  display: flex;
  gap: 12rpx;
}

.load-preset-btn,
.delete-preset-btn {
  width: 100rpx;
  height: 60rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  border: none;
}

.load-preset-btn {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
}

.delete-preset-btn {
  background: #f0f0f0;
  color: #666;
}

.load-preset-btn:active,
.delete-preset-btn:active {
  opacity: 0.8;
}

/* 空状态 */
.preset-empty {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
}

.preset-empty-text {
  font-size: 26rpx;
  color: #999;
}

/* ==================== 衣柜选择器样式 ==================== */
.wardrobe-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.wardrobe-selector-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  animation: fadeIn 0.3s ease;
}

.wardrobe-selector-content {
  position: relative;
  width: 100%;
  max-height: 70vh;
  background: white;
  border-radius: 32rpx 32rpx 0 0;
  padding: 40rpx 0 0 0;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

.wardrobe-selector-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 40rpx 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.wardrobe-selector-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.wardrobe-selector-close {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.wardrobe-selector-list {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.wardrobe-selector-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.wardrobe-selector-item:active {
  background: #e9ecef;
  transform: scale(0.98);
}

.wardrobe-item-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: white;
  flex-shrink: 0;
}

.wardrobe-item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.wardrobe-item-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
}

.wardrobe-item-category {
  font-size: 24rpx;
  color: #999;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}