/* 个人中心样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff9f0 0%, #f8f9fa 100%);
  padding-bottom: 120rpx;
}

/* 用户信息区 */
.user-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx 40rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-radius: 0 0 48rpx 48rpx;
  margin-bottom: 32rpx;
}

.avatar-box {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 12rpx;
}

.user-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 数据统计 */
.stats-card {
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: #fff;
  margin: 0 24rpx 32rpx;
  padding: 32rpx 0;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-number {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF9A56;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: #f0f0f0;
}

/* 功能列表 */
.function-list {
  padding: 0 24rpx;
}

.function-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 28rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.function-card:active {
  transform: scale(0.98);
}

.card-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.card-info {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
}

.card-arrow {
  font-size: 40rpx;
  color: #ddd;
  font-weight: 300;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 24rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: #fff;
  color: #ff4d4f;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: 2rpx solid #ff4d4f;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.1);
}

.logout-btn:active {
  transform: scale(0.98);
}
