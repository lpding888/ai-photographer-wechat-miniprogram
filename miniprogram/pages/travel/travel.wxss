@import "../../styles/global.wxss";

.container {
  padding: 20rpx;
  background: #f8f9fa;
  min-height: 100vh;
  position: relative;
  overflow: hidden;
}

.page-header {
  text-align: center;
  margin-bottom: 30rpx;
  padding: 30rpx 0 20rpx;
  position: relative;
  z-index: 2;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* ÈÄöÁî®Âå∫ÂùóÊ†∑Âºè */
.section {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 24rpx;
}

.section-title text:first-child {
  margin-right: 8rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-left: 8rpx;
}

.required {
  color: #FF6B35;
  font-size: 28rpx;
}

/* ÂçïÂõæ‰∏ä‰º† */
.single-image-upload {
  width: 100%;
}

.image-item {
  position: relative;
  width: 100%;
  height: 400rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 56rpx;
  height: 56rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
}

.upload-placeholder {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #bdc3c7;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #7f8c8d;
  font-size: 28rpx;
  background: rgba(189, 195, 199, 0.1);
  transition: all 0.3s ease;
}

.upload-placeholder .iconfont {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.upload-placeholder:active {
  background: rgba(189, 195, 199, 0.2);
  transform: scale(0.98);
}

/* ÁõÆÁöÑÂú∞ÁΩëÊ†º */
.destinations-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.destination-card {
  position: relative;
  height: 240rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.destination-card:active {
  transform: scale(0.95);
}

.destination-card.selected {
  border: 4rpx solid #FF9A56;
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.3);
}

.destination-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.destination-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  display: flex;
  flex-direction: column;
}

.destination-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 4rpx;
}

.destination-country {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.selected-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background: #FF9A56;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.4);
}

/* Ë°®ÂçïÁªÑ */
.form-group-vertical {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #f0f0f0;
}

.form-label {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 16rpx;
}

.optional {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-left: 8rpx;
  font-weight: normal;
}

.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  background: rgba(236, 240, 241, 0.5);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #2c3e50;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.form-textarea:focus {
  background: #fff;
  border-color: #FF9A56;
}

.textarea-counter {
  text-align: right;
  font-size: 24rpx;
  color: #95a5a6;
  margin-top: 8rpx;
}

/* Êìç‰ΩúÊåâÈíÆ */
.action-section {
  padding: 32rpx 0;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s ease;
  border: none;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.2);
}

.submit-btn[disabled] {
  background: #bdc3c7;
  box-shadow: none;
  opacity: 0.6;
}

/* iconfont */
.iconfont {
  font-family: 'iconfont';
}

.icon-close::before {
  content: '√ó';
  font-size: 32rpx;
}

.icon-camera::before {
  content: 'üì∑';
}

/* È°µÈù¢ÊªëÂÖ•Âä®Áîª */
@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-slide-up {
  animation: slideUp 0.4s ease-out;
}
