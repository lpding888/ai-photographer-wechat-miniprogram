@import "../../styles/global.wxss";

.container {
  padding: 40rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* ËøõÂ∫¶ÊåáÁ§∫Âô® */
.progress-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.progress-circle {
  margin-bottom: 40rpx;
}

.circle-bg {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #e9ecef;
  margin: 0 auto;
}

.circle-fill {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: conic-gradient(#4A90E2 0deg, #e9ecef 0deg);
  transition: transform 0.3s ease;
}

.circle-inner {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: white;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.progress-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #4A90E2;
}

.status-info {
  text-align: center;
}

.status-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.status-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* Áä∂ÊÄÅÂä®Áîª */
.animation-section {
  margin-bottom: 60rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-dots {
  display: flex;
  gap: 10rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4A90E2;
  animation: loading 1.4s infinite ease-in-out both;
}

.dot:nth-child(1) { animation-delay: -0.32s; }
.dot:nth-child(2) { animation-delay: -0.16s; }

@keyframes loading {
  0%, 80%, 100% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
}

.success-icon, .error-icon, .timeout-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: white;
}

.success-icon {
  background: #28a745;
}

.error-icon {
  background: #dc3545;
}

.timeout-icon {
  background: #ffc107;
  font-size: 50rpx;
}

/* È¢ÑËÆ°Êó∂Èó¥ */
.time-info {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  width: 100%;
  max-width: 600rpx;
}

.time-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.time-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4A90E2;
  margin-bottom: 20rpx;
}

.time-note {
  font-size: 24rpx;
  color: #999;
}

/* ÂÆåÊàêÁªìÊûú */
.result-section {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  width: 100%;
  max-width: 600rpx;
}

.result-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #28a745;
  margin-bottom: 20rpx;
}

.result-stats {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.view-works-btn {
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
}

/* Êìç‰ΩúÊåâÈíÆ */
.action-buttons {
  margin-bottom: 60rpx;
  width: 100%;
  max-width: 600rpx;
}

.cancel-btn, .back-btn, .retry-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #dee2e6;
}

.back-btn {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
}

/* üîÑ ÈáçËØïÊåâÈíÆÊ†∑Âºè */
