/* 服装摄影页面样式 */
@import "../../styles/global.wxss";

.container {
  padding: 20rpx;
  background: #E9E3DF;
  min-height: 100vh;
}

.page-header {
  text-align: center;
  margin-bottom: 24rpx;
  padding: 40rpx 0 20rpx;
}

/* 功能入口卡片 */
.feature-cards {
  display: flex;
  gap: 16rpx;
  margin: 0 0 32rpx;
  padding: 0 12rpx;
}

.feature-card {
  flex: 1;
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.9) 100%);
  backdrop-filter: blur(20rpx);
  border-radius: 20rpx;
  padding: 28rpx 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
  border: 1rpx solid rgba(255,255,255,0.3);
  transition: all 0.3s ease;
}

.feature-card.card-hover {
  transform: scale(0.98);
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.12);
}

.card-icon {
  font-size: 52rpx;
  margin-right: 16rpx;
  line-height: 1;
}

.card-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 6rpx;
}

.card-desc {
  font-size: 22rpx;
  color: #95a5a6;
  line-height: 1.4;
}

.card-arrow {
  font-size: 48rpx;
  color: #bdc3c7;
  font-weight: 300;
  line-height: 1;
}

.page-title {
  display: block;
  font-size: 52rpx;
  font-weight: bold;
  color: #000000;
  margin-bottom: 16rpx;
  text-shadow: none;
}

.page-subtitle {
  font-size: 28rpx;
  color: #2f2f2f;
}

.section {
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(20rpx);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.1);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.section-title {
  display: flex;
  align-items: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 32rpx;
  position: relative;
}

.section-title::before {
  content: '';
  width: 6rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  border-radius: 3rpx;
  margin-right: 16rpx;
}

.section-subtitle {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-left: 10rpx;
}

.required {
  color: #e74c3c;
  margin-left: 8rpx;
  font-size: 32rpx;
}

.toggle-icon {
  margin-left: auto;
  font-size: 24rpx;
  color: #95a5a6;
  transition: transform 0.3s ease;
}

.toggle-icon.expanded {
  transform: rotate(180deg);
}

/* 图片上传 */
.image-upload-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(231,76,60,0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
  font-weight: bold;
  box-shadow: 0 2rpx 8rpx rgba(231,76,60,0.3);
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 3rpx dashed #bdc3c7;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #7f8c8d;
  font-size: 28rpx;
  background: rgba(189,195,199,0.1);
  transition: all 0.3s ease;
}

.upload-btn:active {
  background: rgba(189,195,199,0.2);
  border-color: #95a5a6;
}

.upload-btn .iconfont {
  font-size: 64rpx;
  margin-bottom: 16rpx;
}

.upload-btn > text {
  display: block;
  width: 100%;
  text-align: center;
}

/* 参数分组 */
.param-group {
  background: linear-gradient(135deg, #f6f7fb 0%, #f0f1f6 100%);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(70,92,136,0.10);
  position: relative;
  overflow: hidden;
}

.param-group::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #465C88 0%, #2F3E63 100%);
}

.param-group:last-child {
  margin-bottom: 0;
}

.param-group-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #465C88;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.param-group-title::before {
  content: '●';
  margin-right: 12rpx;
  font-size: 20rpx;
}

/* 表单行布局 */
.form-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
  /* 修复双列在部分屏幕溢出被裁切的问题：允许换行 */
  flex-wrap: wrap;
}

.form-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  /* 保底宽度，避免在双列布局中过窄导致控件被压缩/裁切 */
  min-width: 300rpx;
}

.form-item .label {
  font-size: 26rpx;
  color: #34495e;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-item .picker {
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.form-item .picker:active {
  border-color: #465C88;
  box-shadow: 0 4rpx 16rpx rgba(70,92,136,0.20);
}

.form-item input {
  padding: 20rpx;
  background: white;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.form-item input:focus {
  border-color: #465C88;
  box-shadow: 0 4rpx 16rpx rgba(70,92,136,0.20);
}

/* 表单组件 */
.form-group {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-bottom: 28rpx;
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

.form-group:hover {
  border-color: #465C88;
  box-shadow: 0 4rpx 16rpx rgba(70,92,136,0.10);
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group-textarea {
  align-items: flex-start;
}

.form-group-vertical {
  flex-direction: column;
  align-items: flex-start;
}

.textarea-input {
  width: 100%;
  min-height: 160rpx;
  margin-top: 16rpx;
  margin-bottom: 8rpx;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.form-group-vertical .tip {
  width: 100%;
}

.label {
  width: 160rpx;
  font-size: 28rpx;
  color: #2c3e50;
  flex-shrink: 0;
  font-weight: 500;
}

.picker {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

.picker:active {
  border-color: #465C88;
  background: #EEF1F7;
}

.arrow {
  font-size: 20rpx;
  color: #95a5a6;
  margin-left: 10rpx;
  transition: transform 0.3s ease;
}

input {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

input:focus {
  border-color: #465C88;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(70,92,136,0.10);
}

textarea {
  flex: 1;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  font-size: 28rpx;
  min-height: 120rpx;
  border: 2rpx solid #ecf0f1;
  transition: all 0.3s ease;
}

textarea:focus {
  border-color: #465C88;
  background: white;
  box-shadow: 0 0 0 4rpx rgba(70,92,136,0.1);
}

/* 身高选择器 */
.height-selector {
  flex: 1;
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  border: 2rpx solid #ecf0f1;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.height-selector slider {
  width: 100%;
}

/* 高级选项 */
.advanced-options {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease;
}

.advanced-options.show {
  max-height: 2000rpx;
}

/* 场景选择 */
.scene-scroll {
  width: 100%;
  white-space: nowrap;
}

.scene-list {
  display: flex;
  gap: 20rpx;
  padding: 10rpx 0;
}

.scene-item {
  flex-shrink: 0;
  /* 放大场景卡片宽度，提升可视性 */
  width: 300rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.scene-item image {
  /* 放大缩略图尺寸 */
  width: 300rpx;
  height: 200rpx;
  border-radius: 16rpx;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.scene-item.selected image {
  border: 4rpx solid #465C88;
  box-shadow: 0 8rpx 24rpx rgba(70,92,136,0.30);
  transform: scale(1.05);
}

.scene-name {
  /* 适配大图后的标题可读性 */
  font-size: 26rpx;
  color: #7f8c8d;
  font-weight: 600;
}

.scene-item.selected .scene-name {
  color: #465C88;
  font-weight: bold;
}

/* 两列瀑布流（网格）场景卡片 */
.scene-grid{
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}
.scene-card{
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #ecf0f1;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
  transition: all .2s ease;
}
.scene-card image{
  width: 100%;
  height: 240rpx;
  display: block;
}
.scene-card .scene-name{
  padding: 12rpx 16rpx;
  font-size: 26rpx;
  color: #7f8c8d;
}
.scene-card.selected{
  border-color: #465C88;
  box-shadow: 0 8rpx 24rpx rgba(70,92,136,0.20);
  transform: translateY(-2rpx);
}
.scene-card.selected .scene-name{
  color: #465C88;
  font-weight: 600;
}

/* 数量选择 */
.count-selector {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.count-label {
  font-size: 32rpx;
  color: #465C88;
  font-weight: bold;
  min-width: 80rpx;
  text-shadow: 0 1rpx 2rpx rgba(70,92,136,0.20);
}
.cost-summary {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #333;
}
.cost-summary.insufficient {
  color: #E5533D;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 40rpx;
  padding: 24rpx 0;
}

.reset-btn {
  flex: 1;
  height: 96rpx;
  background: rgba(255,255,255,0.9);
  color: #7f8c8d;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.1);
  border: 2rpx solid rgba(255,255,255,0.3);
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.reset-btn:active {
  background: rgba(255,255,255,1);
  transform: scale(0.98);
}

.preset-btn {
  flex: 1;
  height: 96rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(70,92,136,0.3);
  border: none;
  transition: all 0.3s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.preset-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.generate-btn {
  flex: 2;
  height: 96rpx;
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 24rpx rgba(255,122,48,0.40);
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.generate-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s ease;
}

.generate-btn:active::before {
  left: 100%;
}

.generate-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(102,126,234,0.3);
}

.generate-btn.loading {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
  box-shadow: 0 4rpx 16rpx rgba(149,165,166,0.3);
}

.generate-btn:disabled {
  background: linear-gradient(135deg, #bdc3c7 0%, #95a5a6 100%);
  box-shadow: 0 4rpx 16rpx rgba(149,165,166,0.3);
  transform: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .form-row {
    flex-direction: column;
    gap: 12rpx;
  }
  
  .form-item {
    width: 100%;
  }
  
  .action-buttons {
    flex-direction: column;
  }

  .reset-btn,
  .preset-btn,
  .generate-btn {
    flex: none;
    width: 100%;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.section {
  animation: fadeInUp 0.6s ease forwards;
}

.section:nth-child(1) { animation-delay: 0.1s; }
.section:nth-child(2) { animation-delay: 0.2s; }
.section:nth-child(3) { animation-delay: 0.3s; }
.section:nth-child(4) { animation-delay: 0.4s; }
.section:nth-child(5) { animation-delay: 0.5s; }

/* ========== 可用性增强样式 ========== */

/* 分段按钮（性别） */
.segmented {
  display: inline-flex;
  background: #fff;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}
.seg-btn {
  padding: 16rpx 28rpx;
  font-size: 26rpx;
  color: #34495e;
  background: #fff;
  border: none;
}
.seg-btn + .seg-btn {
  border-left: 2rpx solid #ecf0f1;
}
.seg-btn.active {
  background: #465C88;
  color: #fff;
}

/* 数字步进器（年龄/身高） */
.stepper {
  display: inline-flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #ecf0f1;
  border-radius: 16rpx;
  overflow: hidden;
  height: 72rpx;
}
.stepper .dec,
.stepper .inc {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  color: #465C88;
  background: #F6F8FB;
  border: none;
}
.stepper .num {
  width: 140rpx;
  text-align: center;
  font-size: 28rpx;
  border: none;
  background: #fff;
  height: 72rpx;
  line-height: 72rpx;
}
.tip {
  margin-left: 12rpx;
  color: #7f8c8d;
  font-size: 22rpx;
}

/* 快捷标签（chips：国籍/肤色） */
.chips {
  display: flex;
  gap: 12rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}
.chip {
  padding: 10rpx 20rpx;
  border-radius: 28rpx;
  background: #EEF1F7;
  color: #465C88;
  font-size: 24rpx;
  border: 2rpx solid transparent;
}
.chip.active {
  background: #465C88;
  color: #fff;
  border-color: #465C88;
}

/* 使用指南弹窗样式 */
.guide-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.guide-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.guide-content {
  position: relative;
  width: 92%;
  max-width: 680rpx;
  max-height: 85vh;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.guide-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.guide-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
  cursor: pointer;
}

.guide-body {
  flex: 1;
  padding: 32rpx 28rpx;
  overflow-y: auto;
}

.guide-intro {
  margin-bottom: 32rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  border-radius: 16rpx;
}

.intro-text {
  display: block;
  font-size: 26rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.guide-step {
  display: flex;
  gap: 20rpx;
  margin-bottom: 36rpx;
}

.step-number {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
}

.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.7;
  display: block;
  margin-bottom: 12rpx;
}

.step-tips {
  margin-top: 12rpx;
  padding: 16rpx 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  border-left: 4rpx solid #465C88;
}

.tip-label {
  display: block;
  font-size: 24rpx;
  color: #465C88;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
  margin-bottom: 4rpx;
}

.guide-tips {
  margin-top: 24rpx;
  padding: 24rpx;
  background: #fff8e1;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  border: 2rpx solid #ffd54f;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.tips-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.8;
