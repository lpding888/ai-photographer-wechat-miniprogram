/* 用户反馈页面样式 */
.feedback-container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 40rpx;
}

/* 页面头部 */
.page-header {
  background: linear-gradient(135deg, #465C88 0%, #5A6C96 100%);
  padding: 60rpx 30rpx 40rpx;
  color: white;
  text-align: center;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.page-subtitle {
  font-size: 26rpx;
  opacity: 0.9;
  display: block;
}

/* 内容区域 */
.section {
  background: white;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 反馈类型选择 */
.feedback-types {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.type-item {
  display: flex;
  align-items: center;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.type-item.selected {
  border-color: #465C88;
  background: #eef2ff;
  box-shadow: 0 4rpx 15rpx rgba(70, 92, 136, 0.15);
}

.type-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.type-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 5rpx;
}

.type-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.type-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 反馈内容 */
.feedback-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background: #f8f9fa;
  resize: none;
}

.feedback-textarea:focus {
  border-color: #465C88;
  background: white;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 联系方式 */
.optional {
  font-size: 24rpx;
  color: #999;
  font-weight: normal;
}

.contact-input {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  background: #f8f9fa;
}

.contact-input:focus {
  border-color: #465C88;
  background: white;
}

/* 附件上传 */
.attachments-container {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  margin-top: 20rpx;
}

.attachment-item {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 16rpx;
  overflow: hidden;
  border: 2rpx solid #e9ecef;
}

.attachment-preview {
  width: 100%;
  height: 100%;
  background: #f8f9fa;
}

.attachment-preview.video {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #465C88;
  color: white;
}

.video-icon {
  font-size: 40rpx;
  margin-bottom: 5rpx;
}

.video-duration {
  font-size: 20rpx;
  opacity: 0.8;
}

.attachment-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.7);
  color: white;
  font-size: 20rpx;
  padding: 5rpx 10rpx;
  text-align: center;
}

.remove-btn {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: #ff4757;
  color: white;
  border: none;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
}

.add-attachment-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 150rpx;
  height: 150rpx;
  border: 2rpx dashed #ccc;
  border-radius: 16rpx;
  background: #f8f9fa;
  color: #666;
  transition: all 0.3s ease;
}

.add-attachment-btn:active {
  background: #e9ecef;
  border-color: #465C88;
}

.add-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  text-align: center;
  line-height: 1.2;
}

/* 性能数据选项 */
.option-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 25rpx 0;
}

.option-content {
  flex: 1;
  margin-right: 20rpx;
}

.option-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.option-description {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 提交按钮 */
.submit-section {
  padding: 0 20rpx;
  margin-top: 40rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #465C88 0%, #5A6C96 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-shadow: 0 8rpx 25rpx rgba(70, 92, 136, 0.3);
}

.submit-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(70, 92, 136, 0.3);
}

.submit-btn.submitting {
  background: #ccc;
  transform: none;
  box-shadow: none;
}

.submit-btn:disabled {
  background: #ccc;
  transform: none;
  box-shadow: none;
}

/* 历史反馈 */
.history-section {
  margin-top: 40rpx;
}

.toggle-icon {
  margin-left: 10rpx;
  font-size: 24rpx;
  color: #666;
  transition: transform 0.3s ease;
}

.feedback-history {
  margin-top: 20rpx;
}

.history-item {
  padding: 25rpx;
  border: 2rpx solid #f0f0f0;
  border-radius: 16rpx;
  margin-bottom: 15rpx;
  background: #fafafa;
  transition: all 0.3s ease;
}

.history-item:active {
  background: #f0f0f0;
  transform: scale(0.99);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.history-type {
  font-size: 26rpx;
  font-weight: bold;
  color: #465C88;
  background: #eef2ff;
  padding: 5rpx 15rpx;
  border-radius: 20rpx;
}

.history-date {
  font-size: 24rpx;
  color: #999;
}

.history-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.history-status {
  display: inline-block;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.history-status.pending {
  background: #fff3cd;
  color: #856404;
}

.history-status.in_progress {
  background: #d1ecf1;
  color: #0c5460;
}

.history-status.resolved {
  background: #d4edda;
  color: #155724;
}

/* 空状态 */
.empty-history {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

/* 响应式调整 */
@media (max-width: 375px) {
  .section {
    margin: 15rpx;
    padding: 25rpx;
  }

  .page-header {
    padding: 50rpx 20rpx 30rpx;
  }

  .page-title {
    font-size: 32rpx;
  }

  .page-subtitle {
    font-size: 24rpx;
  }

  .type-item {
    padding: 20rpx;
  }

  .type-label {
    font-size: 28rpx;
  }

  .type-description {
    font-size: 22rpx;
  }

  .feedback-textarea {
    min-height: 180rpx;
    padding: 20rpx;
    font-size: 26rpx;
  }

  .contact-input {
    padding: 20rpx;
    font-size: 26rpx;
  }

  .attachment-item, .add-attachment-btn {
    width: 120rpx;
    height: 120rpx;
  }

  .submit-btn {
    height: 90rpx;
    font-size: 30rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .feedback-container {
    background-color: #1a1a1a;
  }

  .section {
    background: #2d2d2d;
    color: #e0e0e0;
  }

  .section-title {
    color: #e0e0e0;
  }

  .type-item {
    background: #3a3a3a;
    border-color: #4a4a4a;
  }

  .type-item.selected {
    background: #2d3d5a;
    border-color: #465C88;
  }

  .type-label {
    color: #e0e0e0;
  }

  .type-description {
    color: #b0b0b0;
  }

  .feedback-textarea, .contact-input {
    background: #3a3a3a;
    border-color: #4a4a4a;
    color: #e0e0e0;
  }

  .feedback-textarea:focus, .contact-input:focus {
    background: #404040;
  }

  .history-item {
    background: #3a3a3a;
    border-color: #4a4a4a;
  }
}