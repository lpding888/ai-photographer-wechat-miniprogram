/* 我的衣柜 - 智能管理版样式 */

.wardrobe-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

/* ========== 顶部标题栏 ========== */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.header-action {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s;
}

.header-action:active {
  background: #e9ecef;
  transform: scale(0.95);
}

.action-icon {
  font-size: 32rpx;
}

.search-icon {
  font-size: 32rpx;
}

/* ========== 分类筛选栏 ========== */
.category-scroll {
  background: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  white-space: nowrap;
}

.category-list {
  display: inline-flex;
  padding: 0 24rpx;
  gap: 16rpx;
}

.category-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  transition: all 0.3s;
  min-width: 100rpx;
}

.category-item.active {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 86, 0.3);
}

.category-icon {
  font-size: 36rpx;
  margin-bottom: 8rpx;
}

.category-item.active .category-icon {
  filter: brightness(1.2);
}

.category-name {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

.category-item.active .category-name {
  color: #fff;
  font-weight: 600;
}

/* ========== 内容区域 ========== */
.content-area {
  padding: 24rpx;
  min-height: 70vh;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 60rpx;
  text-align: center;
}

.empty-icon {
  font-size: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.5;
}

.empty-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-hint {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-tip {
  padding: 20rpx 32rpx;
  background: #fff9f0;
  border-radius: 16rpx;
  border-left: 4rpx solid #FF9A56;
}

.empty-tip text {
  font-size: 24rpx;
  color: #FF9A56;
}

/* ========== 衣物网格 ========== */
.clothes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.clothes-item {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.clothes-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.clothes-image-wrapper {
  position: relative;
  width: 100%;
  height: 320rpx;
  background: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clothes-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.favorite-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  backdrop-filter: blur(8rpx);
}

.clothes-info {
  padding: 20rpx;
}

.clothes-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.clothes-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.clothes-category {
  font-size: 24rpx;
  color: #999;
}

.use-count {
  font-size: 22rpx;
  color: #FF9A56;
  background: #fff9f0;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.clothes-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  font-size: 22rpx;
  color: #666;
  background: #f8f9fa;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

/* ========== 悬浮添加按钮 (FAB) ========== */
.fab {
  position: fixed;
  right: 40rpx;
  bottom: 120rpx;
  width: 112rpx;
  height: 112rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  z-index: 999;
  transition: all 0.3s;
}

.fab:active {
  transform: scale(0.9);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.6);
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

/* ========== 加载状态 ========== */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #fff;
}

/* ========== 搜索弹窗 ========== */
.search-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9998;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.search-modal.show {
  opacity: 1;
  visibility: visible;
}

.search-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: column;
  transform: translateY(-100%);
  transition: transform 0.3s;
}

.search-modal.show .search-content {
  transform: translateY(0);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  gap: 16rpx;
}

.search-icon-input {
  font-size: 32rpx;
  color: #999;
}

.search-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  color: #333;
}

.search-clear {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
  font-weight: 300;
}

.search-cancel {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #FF9A56;
  text-align: center;
}

/* ========== 搜索结果 ========== */
.search-results {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

.result-count {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.result-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  gap: 20rpx;
  transition: all 0.2s;
}

.result-item:active {
  background: #e9ecef;
}

.result-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  object-fit: contain;
  background: #fff;
}

.result-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.result-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.result-category {
  font-size: 24rpx;
  color: #999;
}

/* ========== 搜索历史 ========== */
.search-history {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
}

.history-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.history-title {
  font-size: 26rpx;
  color: #999;
}

.history-clear {
  font-size: 24rpx;
  color: #FF9A56;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  gap: 16rpx;
  transition: all 0.2s;
}

.history-item:active {
  background: #e9ecef;
}

.history-icon {
  font-size: 28rpx;
  color: #999;
}

.history-text {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}
