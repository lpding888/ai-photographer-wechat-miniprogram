/* 玩美空间入口页面样式 - 简约白色+橘色点缀 */
@import "../../styles/global.wxss";

.container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 40rpx 30rpx;
  position: relative;
  overflow: hidden;
}

.page-header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0 20rpx;
  position: relative;
  z-index: 2;
}

.page-title {
  display: block;
  font-size: 60rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 功能卡片网格 */
.features-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24rpx;
  margin-bottom: 60rpx;
  position: relative;
  z-index: 2;
}

.feature-card {
  position: relative;
  background: #fff;
  border-radius: 32rpx;
  padding: 48rpx 36rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  overflow: hidden;
  min-height: 200rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid #f0f0f0;
}

.feature-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.15);
  border-color: #FF9A56;
}

.card-bg {
  position: absolute;
  top: -50%;
  right: -20%;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  opacity: 0.05;
  filter: blur(60rpx);
}

.card-bg-1 {
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
}

.card-bg-2 {
  background: linear-gradient(135deg, #FFB347 0%, #FF9A56 100%);
}

.card-bg-3 {
  background: linear-gradient(135deg, #FFA07A 0%, #FF8C42 100%);
}

.card-content {
  position: relative;
  z-index: 1;
}

.card-icon {
  display: block;
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.card-title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 12rpx;
}

.card-desc {
  display: block;
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.5;
}

.card-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #FF9A56 0%, #FF6B35 100%);
  color: #fff;
  font-size: 20rpx;
  font-weight: bold;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
  z-index: 2;
}

.card-badge.new {
  background: linear-gradient(135deg, #FFB347 0%, #FF8C42 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 66, 0.3);
}

/* 推荐内容 */
.recommend-section {
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 2;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.recommend-cards {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.recommend-card {
  display: flex;
  align-items: center;
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 24rpx;
  transition: all 0.3s ease;
  border: 1rpx solid #e0e0e0;
}

.recommend-card:active {
  background: #fff;
  border-color: #FF9A56;
  transform: scale(0.98);
}

.recommend-icon {
  font-size: 48rpx;
  margin-right: 20rpx;
}

.recommend-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recommend-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 4rpx;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  pointer-events: none;
  z-index: 1;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 154, 86, 0.05);
  filter: blur(60rpx);
}

.circle-1 {
  width: 400rpx;
  height: 400rpx;
  bottom: -200rpx;
  left: -100rpx;
}

.circle-2 {
  width: 300rpx;
  height: 300rpx;
  bottom: -150rpx;
  right: -50rpx;
}

/* 卡片悬浮动画 */
.card-hover:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 154, 86, 0.15);
}

/* 页面淡入动画 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.page-fade-in {
  animation: fadeIn 0.5s ease-out;
}
