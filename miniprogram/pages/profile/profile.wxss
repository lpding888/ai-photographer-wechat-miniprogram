/* Â§¥ÂÉèÊåâÈíÆÊ†∑Âºè */
.avatar-btn {
  position: relative;
  display: block;
  padding: 0;
  margin: 0 0 20rpx 0;
  background: transparent;
  border: none;
  width: 140rpx;
  height: 140rpx;
}

.avatar-btn::after {
  border: none;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  display: block;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.avatar-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 122, 48, 0.85), rgba(255, 154, 92, 0.85));
  backdrop-filter: blur(4rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
  color: white;
  font-size: 22rpx;
  font-weight: bold;
}

.avatar-btn:active .avatar-mask {
  opacity: 1;
  transform: scale(0.98);
}

.avatar-mask .iconfont {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.pulse-animation {
  animation: pulse-avatar 2s ease-in-out infinite;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

@keyframes pulse-avatar {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 0 20rpx rgba(255, 255, 255, 0);
  }
}

