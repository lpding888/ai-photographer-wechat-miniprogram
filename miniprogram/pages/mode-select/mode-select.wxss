/* 模式选择页面样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #fff9f0 0%, #ffffff 100%);
  padding: 80rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
}

/* 顶部Logo区 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
  animation: fadeInDown 0.6s ease-out;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.slogan {
  font-size: 28rpx;
  color: #999;
}

/* 模式卡片区 */
.mode-cards {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.mode-card {
  position: relative;
  background: #fff;
  border-radius: 32rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
  overflow: hidden;
}

.mode-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  transition: all 0.3s;
}

.mode-card.commercial::before {
  background: linear-gradient(90deg, #4A90E2, #5CA8FF);
}

.mode-card.personal::before {
  background: linear-gradient(90deg, #FF9A56, #FF6B35);
}

.mode-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 20rpx;
}

.card-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 28rpx;
}

/* 功能特性 */
.card-features {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.feature-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.feature-text {
  font-size: 22rpx;
  color: #666;
}

/* 箭头 */
.card-arrow {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 48rpx;
  color: #ddd;
  font-weight: 300;
}

.mode-card.commercial .card-arrow {
  color: #4A90E2;
}

.mode-card.personal .card-arrow {
  color: #FF9A56;
}

/* 底部提示 */
.footer {
  margin-top: 40rpx;
  text-align: center;
}

.tip {
  font-size: 24rpx;
  color: #999;
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.mode-card {
  animation: fadeInUp 0.6s ease-out;
}

.mode-card.commercial {
  animation-delay: 0.1s;
}

.mode-card.personal {
  animation-delay: 0.2s;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
