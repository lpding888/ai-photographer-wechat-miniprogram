.state-wrap{padding:16rpx 24rpx}
.state-item{background:#fff;border-radius:16rpx;padding:48rpx 24rpx;display:flex;flex-direction:column;align-items:center;gap:16rpx;color:#000}
.icon{font-size:44rpx}
.text{font-size:28rpx;color:#333}
.tips{font-size:24rpx;color:#666}
.btn{margin-top:8rpx}
.spinner{width:36rpx;height:36rpx;border-radius:50%;border:4rpx solid #E9E3DF;border-top-color:#465C88;animation:spin 1s linear infinite}
@keyframes spin{0%{transform:rotate(0)}100%{transform:rotate(360deg)}}
.btn-outline{border:2rpx solid #465C88;color:#465C88;background:#fff}
.small{font-size:24rpx;padding:12rpx 20rpx;border-radius:999rpx}

/* 骨架屏通用 */
.skeleton-list{display:grid;grid-template-columns:1fr 1fr;gap:20rpx;padding:0 20rpx}
.sk-card{display:flex;flex-direction:column;border-radius:16rpx;background:#fff;overflow:hidden;box-shadow:0 2rpx 8rpx rgba(0,0,0,0.04)}
.sk-card-image{width:100%;height:240rpx;background:linear-gradient(90deg,#f0f0f0 25%,#e0e0e0 37%,#f0f0f0 63%);background-size:400% 100%;animation:shimmer 1.4s ease-in-out infinite}
.sk-card-content{padding:16rpx;display:flex;flex-direction:column;gap:8rpx}

.skeleton-detail{display:flex;flex-direction:column;gap:16rpx}
.sk-image{width:100%;height:420rpx;border-radius:16rpx;background:linear-gradient(90deg,#f2f2f2 25%,#e9e9e9 37%,#f2f2f2 63%);background-size:400% 100%;animation:shimmer 1.2s ease-in-out infinite}
.sk-lines{display:flex;flex-direction:column;gap:12rpx}
.sk-line{height:20rpx;border-radius:10rpx;background:linear-gradient(90deg,#f0f0f0 25%,#e0e0e0 37%,#f0f0f0 63%);background-size:400% 100%;animation:shimmer 1.4s ease-in-out infinite}
.w40{width:40%}.w60{width:60%}.w80{width:80%}

@keyframes shimmer{
  0%{background-position:100% 0}
  100%{background-position:-100% 0}
}