/* 全局样式变量 */
:root {
  --primary-color: #465C88;     /* 主色 */
  --secondary-color: #FF7A30;   /* 强调色 */
  --background-color: #E9E3DF;  /* 背景 */
  --text-color: #000000;        /* 正文 */
  --border-color: #D9D4CF;      /* 边框浅灰 */
  --success-color: #22C55E;
  --warning-color: #F59E0B;
  --error-color: #EF4444;
}

/* 全局样式重置 */
page {
  background-color: var(--background-color);
  color: var(--text-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
}

/* 通用容器 */
.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  text-align: center;
  font-size: 28rpx;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-primary {
  background: linear-gradient(90deg, #465C88, #2F3E63);
  color: white;
  border: none;
}

.btn-secondary {
  background: linear-gradient(90deg, #FF7A30, #FF9A5C);
  color: white;
  border: none;
}

.btn-outline {
  background: transparent;
  border: 2rpx solid var(--primary-color);
  color: var(--primary-color);
}

.btn-disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

/* 通用标题样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-color);
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/* 通用间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.ml-10 { margin-left: 10rpx; }
.mr-10 { margin-right: 10rpx; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }

/* 文本对齐 */
.text-center { text-align: center; }
.text-right { text-align: right; }
.text-left { text-align: left; }

/* 文本颜色 */
.text-primary { color: var(--primary-color); }
.text-secondary { color: var(--secondary-color); }
.text-success { color: var(--success-color); }
.text-warning { color: var(--warning-color); }
.text-error { color: var(--error-color); }

/* Flex布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

.flex-1 {
  flex: 1;
}


/* ==========================================
   🔄 骨架屏动画系统
   ========================================== */

/* 骨架屏基础样式 */
.skeleton {
  background: linear-gradient(
    90deg,
    #f0f0f0 25%,
    #e0e0e0 50%,
    #f0f0f0 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
  border-radius: 8rpx;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* 骨架屏组件 */
.skeleton-text {
  height: 28rpx;
  margin: 8rpx 0;
}

.skeleton-title {
  height: 40rpx;
  width: 60%;
  margin-bottom: 16rpx;
}

.skeleton-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.skeleton-image {
  width: 100%;
  padding-bottom: 100%;
  position: relative;
  border-radius: 16rpx;
}

.skeleton-card {
  padding: 24rpx;
  background: white;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.skeleton-button {
  height: 80rpx;
  border-radius: 40rpx;
}


/* ==========================================
   ✨ 按钮微交互效果
   ========================================== */

/* 增强按钮基础样式 */
.btn-enhanced {
  position: relative;
  overflow: hidden;
  transform: translateZ(0);
  transition: all 0.3s cubic-bezier(0, 0, 0.2, 1);
}

/* 按钮按下效果 */
.btn-enhanced:active {
  transform: scale(0.96);
  transition-duration: 0.15s;
}

/* 按钮波纹效果 */
.btn-ripple {
  position: relative;
  overflow: hidden;
}

.btn-ripple::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  transform: translate(-50%, -50%);
  transition: width 0.5s, height 0.5s;
}

.btn-ripple:active::after {
  width: 300rpx;
  height: 300rpx;
}

/* 按钮光泽效果 */
.btn-shine {
  overflow: hidden;
  position: relative;
}

.btn-shine::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  transition: left 0.5s;
}

.btn-shine:active::before {
  left: 100%;
}


/* ==========================================
   🎭 空状态设计
   ========================================== */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
  min-height: 60vh;
}

.empty-state-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.8;
  animation: empty-float 3s ease-in-out infinite;
}

@keyframes empty-float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

.empty-state-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000;
  margin-bottom: 12rpx;
}

.empty-state-description {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
  margin-bottom: 32rpx;
  max-width: 500rpx;
}

.empty-state-action {
  margin-top: 16rpx;
}


/* ==========================================
   🎬 页面切换动画
   ========================================== */

/* 淡入动画 */
.page-fade-in {
  animation: fadeIn 0.3s cubic-bezier(0, 0, 0.2, 1);
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 从下滑入 */
.page-slide-up {
  animation: slideUp 0.3s cubic-bezier(0, 0, 0.2, 1);
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 缩放淡入 */
.page-zoom-in {
  animation: zoomIn 0.3s cubic-bezier(0, 0, 0.2, 1);
}

@keyframes zoomIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}


/* ==========================================
   🎉 成功反馈动画
   ========================================== */

/* 成功勾选动画 */
.success-checkmark {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #22C55E;
  margin: 0 auto 24rpx;
  animation: successPop 0.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

@keyframes successPop {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

/* 成功消息容器 */
.success-message {
  animation: successSlideIn 0.4s cubic-bezier(0, 0, 0.2, 1);
}

@keyframes successSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}


/* ==========================================
   🃏 3D卡片效果
   ========================================== */

.card-3d {
  perspective: 1000rpx;
  transition: all 0.3s cubic-bezier(0, 0, 0.2, 1);
}

.card-3d-inner {
  transform-style: preserve-3d;
  transition: transform 0.3s cubic-bezier(0, 0, 0.2, 1);
}

.card-3d:active .card-3d-inner {
  transform: rotateX(2deg) rotateY(2deg);
}

/* 卡片悬浮效果 */
.card-hover {
  transition: all 0.3s cubic-bezier(0, 0, 0.2, 1);
}

.card-hover:active {
  transform: translateY(-8rpx);
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.15);
}


/* ==========================================
   🎯 悬浮操作按钮
   ========================================== */

.floating-actions {
  display: flex;
  gap: 12rpx;
  opacity: 0;
  transform: translateY(10rpx);
  transition: all 0.3s cubic-bezier(0, 0, 0.2, 1);
  pointer-events: none;
}

.work-item-active .floating-actions {
  opacity: 1;
  transform: translateY(0);
  pointer-events: auto;
}

.floating-action-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: white;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.15s cubic-bezier(0, 0, 0.2, 1);
}

.floating-action-btn:active {
  transform: scale(0.9);
}


/* ==========================================
   ⚡ 加载动画
   ========================================== */

/* 脉冲加载 */
.loading-pulse {
  animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 旋转加载 */
.loading-spin {
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 弹跳加载 */
.loading-bounce {
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-20rpx);
  }
}


/* ==========================================
   🎪 特殊效果
   ========================================== */

/* 毛玻璃卡片 */
.glass-card {
  background: rgba(255, 255, 255, 0.7);
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  box-shadow:
    0 8rpx 32rpx rgba(0, 0, 0, 0.1),
    inset 0 1rpx 0 rgba(255, 255, 255, 0.6);
}

/* 渐变边框 */
.gradient-border {
  position: relative;
  border-radius: 16rpx;
  padding: 2rpx;
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
}

.gradient-border-inner {
  background: white;
  border-radius: 14rpx;
  padding: 24rpx;
}

/* 光晕效果 */
.glow {
  box-shadow:
    0 0 20rpx rgba(70, 92, 136, 0.3),
    0 0 40rpx rgba(70, 92, 136, 0.2);
}

.glow-success {
  box-shadow:
    0 0 20rpx rgba(34, 197, 94, 0.3),
    0 0 40rpx rgba(34, 197, 94, 0.2);
}

.glow-warning {
  box-shadow:
    0 0 20rpx rgba(245, 158, 11, 0.3),
    0 0 40rpx rgba(245, 158, 11, 0.2);
}

/* 闪烁动画 */
.shimmer {
  position: relative;
  overflow: hidden;
}

.shimmer::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.4),
    transparent
  );
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% {
    left: -100%;
  }
  100% {
    left: 100%;
  }
}