/* 全局样式 */

/* 重置默认样式 */
page {
  background-color: #E9E3DF;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  line-height: 1.6;
  color: #000000;
}

/* 全局容器 */
.container {
  min-height: 100vh;
  background-color: #E9E3DF;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 24rpx;
  overflow: hidden;
}

.card-header {
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.card-body {
  padding: 32rpx;
}

.card-footer {
  padding: 24rpx 32rpx;
  background-color: #fafafa;
  border-top: 1rpx solid #f0f0f0;
}

/* 通用按钮样式 */
.btn {
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  padding: 24rpx 48rpx;
  border: none;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.btn::after {
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #465C88 0%, #2F3E63 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(70, 92, 136, 0.30);
}

.btn-secondary {
  background: linear-gradient(135deg, #FF7A30 0%, #FF9A5C 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(255, 122, 48, 0.30);
}

.btn-success {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(79, 172, 254, 0.3);
}

.btn-outline {
  background: transparent;
  border: 2rpx solid #465C88;
  color: #465C88;
}

.btn-ghost {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  color: white;
}

